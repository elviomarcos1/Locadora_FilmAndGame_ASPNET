@model IEnumerable<Locadora_Filmes_e_Jogos.Models.Filmes>

@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex m-3">Filmes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo filme</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_filme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.classificacao_filme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ano_lancamento_filmes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nota_filme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ativo_filmes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_filme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.classificacao_filme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ano_lancamento_filmes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nota_filme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ativo_filmes)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.pk_filmes">Editar</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.pk_filmes">Detalhes</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.pk_filmes">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
