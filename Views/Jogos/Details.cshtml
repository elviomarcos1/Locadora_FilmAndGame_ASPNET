@model Locadora_Filmes_e_Jogos.Models.Jogos

@{
    ViewData["Title"] = "Details";
}

<h1 class="m-3">Detalhes</h1>

<div class="card text-white bg-dark mb-3 w-50 p-3">
    <div>
        <h4>Jogos</h4>
        <hr />
        <dl class="row text-nowrap">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.nome_jogo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nome_jogo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.classificacao_jogo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.classificacao_jogo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ano_lancamento_jogo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ano_lancamento_jogo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ativo_jogos)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ativo_jogos)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.pk_jogo">Editar</a> 
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </div>
</div>