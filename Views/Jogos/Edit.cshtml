@model Locadora_Filmes_e_Jogos.Models.Jogos

@{
    ViewData["Title"] = "Edit";
}

<h1 class="m-3">Editar</h1>

<div class="card text-white bg-dark w-50 p-3">

    <div class="m-3">
        <h4>Jogos</h4>
        <hr />
        <div class="row">
            <div class="col-md-4 w-50">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="pk_jogo" />
                    <div class="form-group">
                        <label asp-for="nome_jogo" class="control-label"></label>
                        <input asp-for="nome_jogo" class="form-control" />
                        <span asp-validation-for="nome_jogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="classificacao_jogo" class="control-label"></label>
                        <input asp-for="classificacao_jogo" class="form-control" />
                        <span asp-validation-for="classificacao_jogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ano_lancamento_jogo" class="control-label"></label>
                        <input asp-for="ano_lancamento_jogo" class="form-control" />
                        <span asp-validation-for="ano_lancamento_jogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ativo_jogos" class="control-label"></label>
                        <input asp-for="ativo_jogos" class="form-control" />
                        <span asp-validation-for="ativo_jogos" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <input class="btn btn-success" type="submit" value="Salvar" />
                        <a class="btn btn-primary" asp-action="Index">Voltar</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

